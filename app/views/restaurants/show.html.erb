<h1><%= @restaurant.name %></h1>
<div class='container'>
 <div class='card'>
  <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %></p>
    <p>
      <% review.rating.times do %>
        <span>*</span>
      <% end %>
    </p>
  <% end %>
</div>
<div class='card' id='form'>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "add a rating", class: "btn btn-primary" %>
  <% end %>
</div>
</div>

<%= link_to "Back to Restaurants", restaurants_path, class: "btn btn-primary" %>

<%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

</div>
